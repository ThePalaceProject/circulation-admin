{
  "name": "simplified-circulation-web",
  "version": "0.4.36",
  "description": "Web Front-end for Library Simplified Circulation Manager Admin Interface",
  "repository": {
    "type": "git",
    "url": "https://github.com/NYPL-Simplified/circulation-web.git"
  },
  "main": "dist/circulation-web.js",
  "author": "NYPL",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "scripts": {
    "prepublish": "npm run prod",
    "lint": "tslint -c tslint.json src/*.ts src/*.tsx src/**/*.ts src/**/*.tsx src/**/**/*.ts src/**/**/*.tsx && sass-lint -c .sass-lint.yml -v -q",
    "test": "npm run lint && tsc && cp -r src/stylesheets lib && mocha --require lib/testHelper.js lib/__tests__/*.js lib/**/__tests__/*.js lib/**/**/__tests__/*.js",
    "test-file": "npm run lint && tsc && cp -r src/stylesheets lib && mocha --require lib/testHelper.js",
    "test-browser": "npm run test-chrome && npm run test-firefox",
    "test-chrome": "node_modules/.bin/selenium-standalone install && nightwatch -e chrome",
    "test-firefox": "node_modules/.bin/selenium-standalone install && nightwatch -e firefox",
    "dev": "webpack --watch --progress --display-modules --config webpack.dev.config",
    "dev-test-axe": "TEST_AXE=true npm run dev",
    "prod": "webpack -p --progress --display-modules --config webpack.prod.config",
    "build-docs": "typedoc --tsconfig tsconfig.json"
  },
  "dependencies": {
    "@nypl/dgx-svg-icons": "0.3.4",
    "bootstrap": "^3.3.6",
    "draft-convert": "^2.1.5",
    "draft-js": "0.11.2",
    "font-awesome": "^4.6.3",
    "isomorphic-fetch": "^2.2.1",
    "library-simplified-reusable-components": "1.3.16",
    "numeral": "^2.0.6",
    "opds-feed-parser": "0.0.17",
    "opds-web-client": "^0.4.2",
    "prop-types": "^15.7.2",
    "qs": "^6.2.0",
    "react": "^16.8.6",
    "react-beautiful-dnd": "^2.3.1",
    "react-bootstrap": "^0.32.4",
    "react-color": "^2.14.1",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router": "^3.2.0",
    "recharts": "^1.0.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "request": "^2.85.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.12.6",
    "@types/prop-types": "^15.7.3",
    "@types/react": "16.9.11",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^3.6.0",
    "chai": "4.2.0",
    "clean-webpack-plugin": "^2.0.1",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "fetch-mock": "^7.3.1",
    "file-loader": "^3.0.1",
    "follow-redirects": "^1.7.0",
    "husky": "^4.3.0",
    "jsdom": "^9.5.0",
    "json-loader": "^0.5.4",
    "lint-staged": "^10.4.0",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha": "^6.2.2",
    "nightwatch": "^1.0.19",
    "node-sass": "^4.14.1",
    "prettier": "2.1.2",
    "react-axe": "^3.3.0",
    "sass-lint": "^1.9.1",
    "sass-loader": "^7.1.0",
    "selenium-standalone": "^6.16.0",
    "sinon": "7.5.0",
    "style-loader": "^0.13.1",
    "terser-webpack-plugin": "^1.3.0",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "tslint-react-a11y": "1.1.0",
    "typedoc": "0.15.2",
    "typescript": "3.7.2",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "url-loader": "2.2.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-merge": "^4.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write",
    "*.{js,css,md}": "prettier --write"
  }
}
